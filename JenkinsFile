@Library('jenkins-shared-library')_
pipeline {
    agent any
    tools {
        maven "Maven"   
    }   
  
    stages {
        stage('Compile-Build-Test ') {
            steps {
	    	slackNotify 'Building Started'
                build 'BUILD'
            }
	    post{
	    	failure{
			jira 'BUILD STAGE FAILED','JAR-1'
		}
	    }
        }
        stage('SonarQube Analysis'){
            steps{
               sonar()
            }
	    post{
	    	failure{
			jira 'SONAR STAGE FAILED','JAR-2'
		}
	    }
        }
	stage('Security Scan'){
		steps{
			securityScan()
		}
		post{
	    	failure{
			jira 'SECURITY SCAN STAGE FAILED','JAR-3'
		}
	    }
	}
	stage('Nexus') {
	 steps{
		nexus() 
		}
		post{
	    	failure{
			jira 'NEXUS STAGE FAILED','JAR-4'
		}
	    }
	}
	
	stage ('Dev Environment')
	{
		steps{
			devEnv()
		}
		post{
	    	failure{
			jira 'DEV DEPLOY STAGE FAILED','JAR-5'
		}
	    }
	
	}
		   
	stage ('Test Environment')
	{
		steps{
			testEnv()
			approval()
		}
		post{
	    	failure{
			jira 'TEST DEPLOY STAGE FAILED','JAR-6'
		}
	    }
	}
	stage('Performance Testing')
	{
		steps
		{
			performance()
		}
		post{
	    	failure{
			jira 'PERFORMANCE TESTING DEPLOY STAGE FAILED','JAR-7'
		}
	    }
	}
	stage ('Performance Environment')
	{
		steps{
			perfEnv()
			approval()
		}
		post{
	    	failure{
			jira 'PERFORMANCE DEPLOY STAGE FAILED','JAR-8'
		}
	    }
	}
	stage ('Production Environment')
	{
		steps{
			prodEnv()
		}
		post{
	    	failure{
			jira 'PRODUCTION DEPLOY STAGE FAILED','JAR-9'
		}
	    }
	}		
      }
	}
